<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
    http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
    <description>JPA MetaData for classes solely using MetaData</description>
    <persistence-unit-metadata>
        <xml-mapping-metadata-complete></xml-mapping-metadata-complete>
    </persistence-unit-metadata>
    <package>org.jpox.samples.one_many.unidir_2</package>

    <entity class="org.jpox.samples.one_many.unidir_2.UserGroup">
        <table name="JPA_MD_USERGRP"/>
        <inheritance strategy="JOINED"/>
        <attributes>
            <id name="id">
                <generated-value strategy="TABLE"/>
            </id>
            <basic name="name"/>
            <one-to-many name="members" target-entity="org.jpox.samples.one_many.unidir_2.GroupMember">
                <order-column/>
                <join-table name="JPA_MD_USERGRP_MEMBERS">
                    <join-column name="GROUP_ID"/>
                    <inverse-join-column name="MEMBER_ID"/>
                </join-table>
                <cascade>
                    <cascade-persist/>
                    <cascade-merge/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_many.unidir_2.ModeratedUserGroup">
        <table name="JPA_MD_MODUSERGRP"/>
        <attributes>
            <basic name="title"/>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_many.unidir_2.GroupMember">
        <table name="JPA_MD_GRPMEMBER"/>
        <inheritance strategy="JOINED"/>
        <attributes>
            <id name="id">
                <generated-value strategy="TABLE"/>
            </id>
            <basic name="name"/>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_many.unidir_2.ExpertGroupMember">
        <table name="JPA_MD_EXPGRPMEMBER"/>
        <attributes>
            <basic name="title"/>
        </attributes>
    </entity>

</entity-mappings>