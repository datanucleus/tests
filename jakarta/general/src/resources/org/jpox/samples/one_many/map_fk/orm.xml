<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
    http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
    <description>JPA MetaData for classes solely using MetaData</description>
    <persistence-unit-metadata>
        <xml-mapping-metadata-complete></xml-mapping-metadata-complete>
    </persistence-unit-metadata>
    <package>org.jpox.samples.one_many.map_fk</package>

    <entity class="org.jpox.samples.one_many.map_fk.MapFKHolder">
        <table name="JPA_MAP_FK_HOLDER"/>
        <attributes>
            <id name="id"/>
            <basic name="name"/>
            <one-to-many name="map" mapped-by="holder">
                <map-key name="key"/>
                <cascade>
                    <cascade-persist/>
                    <cascade-merge/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_many.map_fk.MapFKValueBase">
        <table name="JPA_MAP_FK_VALUE"/>
        <inheritance strategy="SINGLE_TABLE"/>
        <discriminator-column length="255"/>
        <attributes>
            <id name="id"/>
            <basic name="key"/>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_many.map_fk.MapFKValue">
        <attributes>
            <basic name="name"/>
            <basic name="description"/>
            <many-to-one name="holder"/>
        </attributes>
    </entity>
</entity-mappings>