<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">
    <description>JPA MetaData for classes solely using MetaData</description>
    <persistence-unit-metadata>
        <xml-mapping-metadata-complete></xml-mapping-metadata-complete>
    </persistence-unit-metadata>
    <package>org.jpox.samples.one_one.bidir</package>

    <entity class="org.jpox.samples.one_one.bidir.Equipment">
        <table name="JPA_MD_EQUIPMENT"/>
        <attributes>
            <id name="id">
                <generated-value strategy="TABLE"/>
            </id>
            <basic name="make"/>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_one.bidir.Timer">
        <table name="JPA_MD_TIMER"/>
        <inheritance strategy="JOINED"/>
        <attributes>
            <basic name="digital">
                <column name="DIGITAL"/>
            </basic>
            <one-to-one name="boiler">
                <join-column name="BOILER_ID"/>
            </one-to-one>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.one_one.bidir.Boiler">
        <table name="JPA_MD_BOILER"/>
        <inheritance strategy="JOINED"/>
        <attributes>
            <basic name="model">
                <column name="MODEL"/>
            </basic>
            <one-to-one name="timer" mapped-by="boiler"/>
        </attributes>
    </entity>

</entity-mappings>