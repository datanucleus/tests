<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    <!-- Company "unit" -->
    <persistence-unit name="Company">
        <mapping-file>company-mappings.xml</mapping-file>
        <class>org.datanucleus.samples.company.Person</class>
        <class>org.datanucleus.samples.company.Employee</class>
        <class>org.datanucleus.samples.company.Manager</class>
        <class>org.datanucleus.samples.company.Department</class>
        <class>org.datanucleus.samples.company.Developer</class>
        <class>org.datanucleus.samples.company.Account</class>
        <class>org.datanucleus.samples.company.Organisation</class>
        <class>org.datanucleus.samples.company.Qualification</class>
        <exclude-unlisted-classes/>
    </persistence-unit>
</persistence>