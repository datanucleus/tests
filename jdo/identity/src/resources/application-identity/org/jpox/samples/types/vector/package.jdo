<?xml version="1.0"?>
<!DOCTYPE jdo SYSTEM "file:/javax/jdo/jdo.dtd">

<jdo>
    <package name="org.jpox.samples.types.vector">
        <class name="Vector1" detachable="true" identity-type="application" objectid-class="Vector1$Oid">
            <field name="identifierA" primary-key="true"/>
            <field name="identifierB" primary-key="true"/>
            <field name="items" persistence-modifier="persistent">
                <collection element-type="org.jpox.samples.types.container.ContainerItem"/>
                <join/>
            </field>
            <fetch-group name="items">
                <field name="items"/>
            </fetch-group>
        </class>

        <class name="Vector1Child" detachable="true" identity-type="application">
            <inheritance strategy="new-table"/>
            <field name="name" persistence-modifier="persistent">
                <column length="20" jdbc-type="VARCHAR"/>
            </field>
        </class>

        <class name="Vector2" detachable="true" identity-type="application" objectid-class="Vector2$Oid">
            <field name="identifierA" primary-key="true"/>
            <field name="identifierB" primary-key="true"/>
            <field name="items" persistence-modifier="persistent" mapped-by="container">
                <collection element-type="Vector2Item"/>
            </field>
            <fetch-group name="items">
                <field name="items"/>
            </fetch-group>
        </class>

        <class name="Vector2Item" detachable="true" identity-type="application" objectid-class="Vector2Item$Oid">
            <field name="identifierA" primary-key="true"/>
            <field name="identifierB" primary-key="true"/>
            <field name="container" persistence-modifier="persistent"/>
        </class>

        <class name="Vector2ItemChild" detachable="true" identity-type="application">
            <inheritance strategy="new-table"/>
            <field name="code" persistence-modifier="persistent">
                <column length="10" jdbc-type="VARCHAR"/>
            </field>
        </class>
    </package>
</jdo>