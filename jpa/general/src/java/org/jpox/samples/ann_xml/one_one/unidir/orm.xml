<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">
    <description>JPA MetaData for classes using Annotations+MetaData</description>
    <package>org.jpox.samples.ann_xml.one_one.unidir</package>

    <entity class="org.jpox.samples.ann_xml.one_one.unidir.Login">
        <table name="JPA_AX_LOGIN"/>
    </entity>

    <entity class="org.jpox.samples.ann_xml.one_one.unidir.LoginAccount">
        <table name="JPA_AX_LOGINACCOUNT"/>
        <attributes>
            <id name="id">
                <column name="ID"/>
                <generated-value strategy="TABLE"/>
            </id>
            <basic name="firstName">
                <column name="FIRSTNAME" length="20"/>
            </basic>
            <basic name="lastName">
                <column name="LASTNAME"/>
            </basic>
            <one-to-one name="login">
                <join-column name="LOGIN_ID"/>
            </one-to-one>
        </attributes>
    </entity>

</entity-mappings>