<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">
    <description>JPA MetaData for classes solely using MetaData</description>
    <persistence-unit-metadata>
        <xml-mapping-metadata-complete></xml-mapping-metadata-complete>
    </persistence-unit-metadata>
    <package>org.jpox.samples.ann_xml.many_many</package>

    <entity class="org.jpox.samples.ann_xml.many_many.PetroleumCustomer">
        <table name="JPA_AX_PETROL_CUSTOMER"/>
        <attributes>
            <id name="id">
                <column name="CUST_ID"/>
            </id>
            <many-to-many name="suppliers" mapped-by="customers" 
                target-entity="org.jpox.samples.ann_xml.many_many.PetroleumSupplier">
                <join-table name="JPA_AX_PETROL_CUST_SUPP">
                    <join-column name="CUSTOMER_ID"/>
                    <inverse-join-column name="SUPPLIER_ID"/>
                </join-table>
            </many-to-many>
        </attributes>
    </entity>

    <entity class="org.jpox.samples.ann_xml.many_many.PetroleumSupplier">
        <table name="JPA_AX_PETROL_SUPPLIER"/>
        <attributes>
            <id name="id">
                <column name="SUPP_ID"/>
            </id>
            <many-to-many name="customers"
                target-entity="org.jpox.samples.ann_xml.many_many.PetroleumCustomer"/>
        </attributes>
    </entity>

</entity-mappings>